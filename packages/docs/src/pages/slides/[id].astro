---
// Custom 404 page that handles SPA routing for embedded Slidev presentations
const { pathname } = Astro.url;

// Check if this is a slides route (e.g., /ar1205/slides/1)
const slidesMatch = pathname.match(/^\/(ar\d{4})\/slides\/(.+)$/);

if (slidesMatch) {
  const [, courseCode, slideRoute] = slidesMatch;
  // Redirect to the slides index with the route as a hash for client-side routing
  return Astro.redirect(`/${courseCode}/slides/#/${slideRoute}`, 302);
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>404 - Page Not Found</title>
  <style>
    body {
      font-family: system-ui, -apple-system, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      text-align: center;
      padding: 2rem;
    }
    h1 {
      font-size: 6rem;
      margin: 0;
      font-weight: 800;
    }
    p {
      font-size: 1.5rem;
      margin: 1rem 0;
    }
    a {
      color: white;
      text-decoration: underline;
      font-weight: 600;
    }
  </style>
</head>
<body>
  <h1>404</h1>
  <p>Page not found</p>
  <a href="/">Return to home</a>
</body>
</html>
